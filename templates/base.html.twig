<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <title>
            {% block title %}Welcome!{% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('dist/index.css') }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body>
        {% block hero %}
            <section class="hero is-primary">
                <div class="hero-body">
                    <div class="container">
                        {% block hero_body %}{% endblock %}
                    </div>
                </div>
            </section>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('dist/runtime.js') }}"></script>
            <script src="{{ asset('dist/vendor.js') }}"></script>
            <script src="{{ asset('dist/index.js') }}"></script>
        {% endblock %}
    </body>
</html>